.container
  h1.text-center.name = @exercise.name
  h2.text-center.white
    = @exercise.record
    = ' '
    = @exercise.unit

.container
  .row
    .col-2
    .col-8
      - if @revisions.any?
        .exercise-list
          h2.text-center History
          hr
          table style="width:100%"
            tr
              th Record
              th Date
              - @revisions.each do |revision|
                tr.text-center
                  td
                    = revision.record
                    = ' '
                    = revision.unit
                  td
                    = revision.date
      br
      =form_for [@user, @exercise] do |f|
        h2.text-center Update
        hr
        = f.label :name
        = f.text_field :name, class: 'input-light'
        = f.label :record
        = f.number_field :record, class: 'input-light'
        = f.label :unit
        = f.select(:unit,['Pounds', 'Kilos', 'Time (seconds)', 'Reps'])
        = f.label :date
        = f.date_field :date, class: "input-light"
        = f.button "PR City!", class: "btn-dark"

    .col-2
